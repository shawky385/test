<a class="back-btn" href="index.html">⬅️ رجوع</a>
<h2>بلاغات قسم <span id="locationTitle"></span></h2>

<table id="reportsTable" style="display: none;">
  <thead>
    <tr>
      <th>رقم</th>
      <th>تاريخ</th>
      <th>نوع الخطأ</th>
      <th>وصف الواقعة</th>
    </tr>
  </thead>
  <tbody id="tableBody"></tbody>
</table>

<div id="noData" class="no-data"></div>

<script>
  const locationParam = new URLSearchParams(window.location.search).get('location');
  document.getElementById('locationTitle').textContent = locationParam || "غير محدد";

  const table = document.getElementById('reportsTable');
  const tbody = document.getElementById('tableBody');
  const noData = document.getElementById('noData');

  fetch(`https://script.google.com/macros/s/AKfycbxWFqAdZ32oP4YDCOXcmYkC6q1CzTfqMqinLU9pv7l8KG3XRXeKf4oZMyK8r4ez1f-Y/exec?type=fetch&location=${encodeURIComponent(locationParam)}`)
    .then(res => res.json())
    .then(data => {
      if (data.length === 0) {
        noData.textContent = "لا توجد بلاغات مسجلة لهذا القسم.";
      } else {
        table.style.display = 'table';
        data.forEach(row => {
          const tr = document.createElement('tr');
          tr.innerHTML = `
            <td>${row.serial}</td>
            <td>${row.date}</td>
            <td>${row.error}</td>
            <td>${row.description}</td>
          `;
          tbody.appendChild(tr);
        });
      }
    })
    .catch(err => {
      noData.textContent = "حدث خطأ أثناء تحميل البيانات.";
    });
</script>

</body>
</html>
